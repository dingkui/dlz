<sqlList>
	<filter key="filter.comm.byid">
		<![CDATA[
			{"_id":[${_ids}]}
		]]>
	</filter>
	
	<!-- 
	需要建的索引：
	db.article.ensureIndex({"Title":"text"})
	db.article.ensureIndex({"ArticleID":-1},{"unique":true})
	db.article.ensureIndex({"ChannelID":1})
	db.article.ensureIndex({"ClsssID":1})
	db.article.ensureIndex({"topics":1})
	db.generic.ensureIndex({"props.id": 1})
	 -->
	<filter key="filter.article">
		<![CDATA[
			{
			【$and:[
				 【{ArticleID:${id}】//ID
				 【{ChannelID:{$in:${dchannelIds}}},】//频道
				 【{ClsssID:{$in:${classIds}}},】//栏目
				 【{topics:{$in:${topics}}},】//专题：注意，专题存储是的专题对象数组 topic_id,topic_name
				 【{ELITE:${isRecommend}},】
				 【{Hits:{$gte:${hisofhot}}},】
				 【{UpdateTime:{$gte:"${dateNum}"}},】
				 【{default_picurl:{$exists:true}}},^${isPicUrl}】
				 ],】
				【"$text":{"$search":"${key}"}】
			}
		]]>
	</filter>
	<find key="find.article" name="article" filter="filter.article"/>
	<insert key="insert.article" name="article"/>
	<delete key="delete.article.byid" name="article" filter="filter.comm.byid"/>
	<delete key="delete.article.byfilter" name="article" filter="filter.article"/>
	<update key="update.article.all" name="article" filter="filter.article">
		<![CDATA[
			{
			$set:{"new":"${new}"}
			}
		]]>
	</update>
</sqlList>
